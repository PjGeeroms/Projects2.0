{% set services = craft.entries().section('service').all() %}

<div class="bg-black text-white flex justify-between items-start">
    <h2>{{ block.sectionTitle }}</h2>
    <p>{{ block.sectionDescription }}</p>
</div>

<div class="container--fw container@md is-dark">
    <div class="container">
        <div class="grid--fw my-1 pt-7 pb-2 my-0@md px-2@lg">
            <div class="col-12">
                <div class="grid pb-5">
                    <div class="col-12 col-6@lg">
                        <div class="box">
                            <h2 data-aos="fade-up">{{ block.sectionTitle }}</h2>
                        </div>
                    </div>
                    <div class="col-12 col-os-8-13@lg">
                        <div class="box">
                            <div class="text-offset">
                                <p data-aos="fade-up" data-aos-delay="300">{{ block.sectionDescription }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="grid-1--fw grid-2--fw@md grid-3--fw@lg grid-5@xxl service-showcase">
                    {% set delay = 0 %}
                    {% for service in services %}
                        <article class="card is-dark">
                            <div class="card__image" data-aos="fade-up" data-aos-delay="{{ delay }}">
